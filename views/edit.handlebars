<div class="container mt-5">
  <form class="row g-3" action="/{{this._id}}?method=PUT" method="PUT">
    <div class="col-md-4">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" id="name" value="{{this.name}}">
    </div>
    <div class="col-md-6">
      <label for="address" class="form-label">地址</label>
      <input type="text" class="form-control" id="address" name="location" value="{{this.location}}">
    </div>
    <div class="col-md-2 mt-6">
      <label for="rating" class="form-label">評分</label>
      <input type="text" class="form-control" id="rating" placeholder="5.0" value="{{this.rating}}">
    </div>
    <div class="col-6 mt-3">
      <label for="phone" class="form-label">電話</label>
      <input type="text" class="form-control" id="phone" placeholder="phone" value="{{this.phone}}">
      <label for="image" class="mt-3" class="form-label">Google Map</label>
      <input type="text" class="form-control" id="google_map" placeholder="google map url" value="{{this.google_map}}">
    </div>
    <div class="col-md-6 mt-3">
      <label for="image" class="form-label">圖片</label>
      <input type="text" class="form-control" id="image" placeholder="image url" value="{{this.image}}">
      <div class="col-md-4 mt-3">
        <label for="category" class="form-label">類別</label>
        <select id="category" class="form-select" value="{{this.category}}">
          <option>{{this.category}}</option>
          <option>美式餐廳</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>酒吧</option>
          <option>咖啡</option>
          <option>中東料理</option>
          <option>其他</option>
        </select>
      </div>
    </div>
    <div class="form-floating col-md-6 mt-3">
      <label for="description">描述</label>
      <textarea class="form-control" placeholder="description" id="description"
        value="{{this.description}}">{{this.description}}</textarea>

    </div>

    <div class="col-12 mt-3">
      <button type="submit" class="btn btn-primary">更新</button>
    </div>
  </form>
</div>